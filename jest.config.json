{
	"moduleFileExtensions": [
		"ts",
		"tsx",
		"js",
		"jsx",
		"json"
	],
	"testRegex": "/test/*.*\\.spec\\.ts$",
	"testEnvironment": "jsdom",
	"transform": {
		"^.+\\.tsx?$": "ts-jest"
	},
	"collectCoverage": true,
	"collectCoverageFrom": [
		"src/**/*.{ts,tsx}",
		"!**/node_modules/**",
		"!**/samples/**"
	],
	"coverageReporters": [
		"lcovonly",
		"html"
	]
}